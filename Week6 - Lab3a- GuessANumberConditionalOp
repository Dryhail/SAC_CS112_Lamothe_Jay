import java.util.Scanner;
public class GuessANumber{

    //public class Numbers {

    public static void main(String[] args) {


        Scanner input = new Scanner(System.in);

        int computer;
        int user;

        System.out.print("Please enter a number:  ");
        user = input.nextInt();

        System.out.print("Computer generated: ");
        computer = 0 + (int) (Math.random() * 10);
        System.out.println(computer);


        if ((user < computer)|| (user > computer)) {
            System.out.println("The User number is either greater or smaller than the Computer generated number");
        }
        else if ((user==user) && (computer==computer)){
            System.out.println("The numbers are the same.");
        }else {
            System.out.println("You did not put in a number!");
        }

    System.out.println("Thank you for playing, you're done! Goodbye.");
    }
    }
